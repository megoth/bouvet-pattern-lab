extends layout

block content
	- var slides = env.helpers.getSlides(contents)
	each slide, index in slides
		section.slide(id=env.helpers.getSlideId(slide), class=slide.metadata.type)
			.content
				if slide.metadata.type === 'full'
					h1!= slide.title
				else
					h2!= slide.title
					!= slide.html
			.presentation-progress
				.progress(style={ width: slide.metadata.progress || `${100 * (index + 1) / slides.length}%` })

